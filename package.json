{
	"name": "comp-web",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"dotenv": "^17.2.2",
			"zod": "^4.1.13",
			"typescript": "^5"
		}
	},
	"type": "module",
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"db:push": "turbo -F @comp-web/db db:push",
		"db:studio": "turbo -F @comp-web/db db:studio",
		"db:generate": "turbo -F @comp-web/db db:generate",
		"db:migrate": "turbo -F @comp-web/db db:migrate"
	},
	"dependencies": {
		"dotenv": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"turbo": "^2.6.3",
		"@biomejs/biome": "^2.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"typescript": "catalog:",
		"@types/node": "^22.13.11"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "bun@1.3.1"
}
